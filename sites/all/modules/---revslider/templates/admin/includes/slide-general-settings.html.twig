                        <span class="description">{{ "Link the Full Slide to an URL or Action."|trans }}</span>
                    </p>

                    <div class="rs-slide-link-setting-wrapper">
                        <!-- Link Type -->
                        <p>
                            {% set enable_link_2 = slide_general_settings.enable_link_2 %}
                            <label>{{ "Link Type:"|trans }}</label>
                            <span style="display:inline-block; width:200px; margin-right:20px;">
								<input type="radio" id="link_type_1" value="regular"
                                       name="link_type"{{ (enable_link_2 == 'regular') ? ' checked="checked" ' : '' }}>
                                <span style="line-height:30px; vertical-align: middle; margin:0px 20px 0px 10px;">{{ "Regular"|trans }}</span>
								<input type="radio" id="link_type_2" value="slide"
                                       name="link_type"{{ (enable_link_2 == 'slide') ? ' checked="checked" ' : '' }}>
                                <span style="line-height:30px; vertical-align: middle; margin:0px 20px 0px 10px;">{{ "To Slide"|trans }}</span>
							</span>
                            <span class="description">{{ "Regular - Link to URL,  To Slide - Call a Slide Action"|trans }}</span>
                        </p>

                        <div class="rs-regular-link-setting-wrap">
                            <!-- SLIDE LINK -->
                            <p>
                                <label>{{ "Slide Link:"|trans }}</label>
                                <input type="text" id="rev_link" name="link"
                                       value="{{ slide_general_settings.val_link | e('html') }}">
                                <span class="description">{{ "A link on the whole slide pic (use {{link}} or {{meta:somemegatag}} in template sliders to link to a post or some other meta)"|trans }}</span>
                            </p>

                            <!-- LINK TARGET -->
                            <p>
                                {% set link_open_in = slide_general_settings.link_open_in %}
                                <label>{{ "Link Target:"|trans }}</label>
                                <select id="link_open_in" name="link_open_in">
                                    <option value="same"{{ (link_open_in == 'same' )? ' selected="selected"' : '' }}>
                                        {{ "Same Window"|trans }}</option>
                                    <option value="new"{{ (link_open_in == 'new' )? ' selected="selected"' : '' }}>
                                        {{ "New Window"|trans }}</option>
                                </select>
                                <span class="description">{{ "The target of the slide link."|trans }}</span>
                            </p>
                        </div>
                        <!-- LINK TO SLIDE -->
                        <p class="rs-slide-to-slide">
                            <label>{{ "Link To Slide:"|trans }}</label>
                            <select id="slide_link" name="slide_link">
                                {% set slide_link = slide_general_settings.slide_link %}
                                {% for link_handle,link_name in slide_general_settings.arrSlideLinkLayers %}
                                    <option value="{{ link_handle | e('html_attr') }}" {{ (link_handle == slide_link ) ? ' selected="selected"' : '' }}>
                                        {{ link_name | e('html') }}</option>
                                {% endfor %}
                            </select>
                            <span class="description">{{ "Call Slide Action"|trans }}</span>
                        </p>
                        <!-- Link POSITION -->
                        <p>
                            {% set link_pos = slide_general_settings.link_pos %}
                            <label>{{ "Link Sensibility:"|trans }}</label>
                            <span style="display:inline-block; width:200px; margin-right:20px;">
								<input type="radio" id="link_pos_1" value="front"
                                       name="link_pos"{{ (link_pos == 'front') ? ' checked="checked"' }}>
                                <span style="line-height:30px; vertical-align: middle; margin:0px 20px 0px 10px;">{{ "Front"|trans }}</span>
								<input type="radio" id="link_pos_2" value="back"
                                       name="link_pos"{{ (link_pos == 'back') ? ' checked="checked"' }}>
                                <span style="line-height:30px; vertical-align: middle; margin:0px 20px 0px 10px;">{{ "Back"|trans }}</span>
							</span>
                            <span class="description">{{ "The z-index position of the link related to layers"|trans }}</span>
                        </p>
                    </div>
                </div>
            {% endif %}
        </form>
    </div>
</div>
<script type="text/javascript">

    document.addEventListener("DOMContentLoaded", function () {

        jQuery('.my-alphacolor-field').tpColorPicker({
            mode: 'single',
            wrapper: '<span class="rev-colorpickerspan"></span>'
        });


        jQuery('#enable_link').change(function () {
            if (jQuery(this).val() == 'true') {
                jQuery('.rs-slide-link-setting-wrapper').show();
            } else {
                jQuery('.rs-slide-link-setting-wrapper').hide();
            }
        });
        jQuery('#enable_link option:selected').change();

        jQuery('input[name="link_type"]').change(function () {
            if (jQuery(this).val() == 'regular') {
                jQuery('.rs-regular-link-setting-wrap').show();
                jQuery('.rs-slide-to-slide').hide();
            } else {
                jQuery('.rs-regular-link-setting-wrap').hide();
                jQuery('.rs-slide-to-slide').show();
            }
        });
        jQuery('input[name="link_type"]:checked').change();

    });
</script>