                        <li class="mainbg-sub-parallax-selector"
                            data-content="#mainbg-sub-parallax">{{ "Parallax / 3D"|trans }}</li>
                        <li class="mainbg-sub-kenburns-selector"
                            data-content="#mainbg-sub-kenburns">{{ "Ken Burns"|trans }}</li>
